<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">


    <!--Servlets begin-->
    <servlet>
        <servlet-name>SignUp</servlet-name>
        <servlet-class>SignUpCustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignUp</servlet-name>
        <url-pattern>/sign-up</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogInServlet</servlet-name>
        <servlet-class>LogInServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogInServlet</servlet-name>
        <url-pattern>/log-in</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/log-in/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MyAccountServlet</servlet-name>
        <servlet-class>MyAccountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MyAccountServlet</servlet-name>
        <url-pattern>/my-account</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>BestSellerFlightsServlet</servlet-name>
        <servlet-class>BestSellerFlightsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BestSellerFlightsServlet</servlet-name>
        <url-pattern>/my-account/best-seller-flights</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MailingListServlet</servlet-name>
        <servlet-class>MailingListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MailingListServlet</servlet-name>
        <url-pattern>/my-account/customer/maillist</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CustomersListServlet</servlet-name>
        <servlet-class>CustomersListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomersListServlet</servlet-name>
        <url-pattern>/my-account/customer/list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EmployeeListServlet</servlet-name>
        <servlet-class>EmployeeListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmployeeListServlet</servlet-name>
        <url-pattern>/my-account/employee/list</url-pattern>
    </servlet-mapping>


    <!--Servlets end -->

    <mime-mapping>
        <extension>css</extension>
        <mime-type>text/css</mime-type>
    </mime-mapping>

    <mime-mapping>
        <extension>js</extension>
        <mime-type>application/javascript</mime-type>
    </mime-mapping>

    <!--<error-page>-->
        <!--<error-code>404</error-code>-->
        <!--<location>/error404.html</location>-->
    <!--</error-page>-->

</web-app>